{
  "kind": "collectionType",
  "collectionName": "shops",
  "info": {
    "singularName": "shop",
    "pluralName": "shops",
    "displayName": "Shop",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "text"
    },
    "owner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "qrCode": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "employeeCount": {
      "type": "integer"
    },
    "totalFee": {
      "type": "decimal"
    },
    "cccdBefore": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "cccdAfter": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "referredBy": {
      "type": "string",
      "required": false,
      "unique": false
    },
    "checkIn": {
      "type": "component",
      "repeatable": true,
      "component": "share.check-in"
    },
    "latitude": {
      "type": "string"
    },
    "longitude": {
      "type": "string"
    },
    "space": {
      "type": "integer"
    },
    "skills": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::skill.skill",
      "mappedBy": "shop"
    },
    "shifts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::shift.shift",
      "mappedBy": "shop"
    },
    "configShift": {
      "type": "component",
      "repeatable": false,
      "component": "share.config"
    },
    "shiftDaily": {
      "type": "component",
      "repeatable": true,
      "component": "share.shift"
    },
    "isClockIn": {
      "type": "boolean",
      "default": false
    },
    "request": {
      "type": "component",
      "repeatable": true,
      "component": "share.request"
    },
    "typeCheckIn": {
      "type": "enumeration",
      "enum": [
        "day",
        "shift",
        "hours"
      ],
      "default": "hours"
    }
  }
}
